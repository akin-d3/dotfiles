set wildmenu
set tags=tags
nnoremap Y y$
nnoremap V v$

let mapleader = ','

" split panel
set splitbelow
set splitright

" NERDTree setting 
" autocmd vimenter * NERDTree
map <C-t> :NERDTreeToggle<CR>


" ctrlp setting
set wildmode=longest,list
set wildignore+=*.a,*.o
set wildignore+=*.DS_Store,.git,.hg,.svn
set wildignore+=*~,*.swp,*.tmp
set wildignore+=*.bmp,*.jpg,*.png,*.gif,*.ico
set wildignore+=*.pyc,*.pyo,*.pyd


" map settings 
nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
nmap <C-l> <C-w>l
nmap <C-\>\ <C-w>v
nmap <C-\>= <C-w>s
" map <C-b> :browse oldfiles<CR> 
map <C-n> <C-e>
map <C-p> <C-y>

" let g:molokai_original = 1
" let g:rehash256 = 1

